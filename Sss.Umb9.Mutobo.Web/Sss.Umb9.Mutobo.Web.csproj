<Project Sdk="Microsoft.NET.Sdk.Web">

    <PropertyGroup>
        <TargetFramework>net5.0</TargetFramework>
        <DefaultItemExcludes>$(DefaultItemExcludes);App_Plugins/**;</DefaultItemExcludes>
        <DefaultItemExcludes>$(DefaultItemExcludes);umbraco/**;</DefaultItemExcludes>
        <DefaultItemExcludes>$(DefaultItemExcludes);wwwroot/media/**;</DefaultItemExcludes>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="Umbraco.Cms" Version="9.0.0" />
        <PackageReference Include="uSync" Version="9.0.0.1" />
        <PackageReference Include="WebMarkupMin.AspNetCore5" Version="2.10.0" />
    </ItemGroup>



    <ItemGroup>
        <Content Include="App_Plugins/**" CopyToOutputDirectory="Always" />
        <Content Include="umbraco/**" CopyToOutputDirectory="Always" />
        <Compile Remove="wwwroot\media\**" />
        <Compile Remove="wwwroot\web-components-cms-template-base\**" />
        <Content Remove="umbraco/Data/**" />
        <Content Remove="umbraco/Logs/**" />
        <Content Remove="umbraco/mediacache/**" />
        <Content Remove="umbraco/models/**" />
        <Content Remove="wwwroot\media\**" />
        <Content Remove="wwwroot\web-components-cms-template-base\**" />
        <Compile Include="umbraco/models/**" Exclude="**/*.flag" />
    </ItemGroup>



    <ItemGroup>
      <EmbeddedResource Remove="wwwroot\media\**" />
      <EmbeddedResource Remove="wwwroot\web-components-cms-template-base\**" />
      <None Remove="wwwroot\media\**" />
      <None Remove="wwwroot\web-components-cms-template-base\**" />
    </ItemGroup>



    <ItemGroup>
      <Content Remove="appsettings.Development.json" />
    </ItemGroup>



    <ItemGroup>
      <None Remove="favicon.ico" />
    </ItemGroup>



    <ItemGroup>
      <Content Include="favicon.ico" />
    </ItemGroup>



    <ItemGroup>
      <ProjectReference Include="..\Sss.Umb9.Mutobo\Sss.Umb9.Mutobo.csproj" />
    </ItemGroup>



    <ItemGroup>
      <Folder Include="uSync\v9\ContentTypes\" />
      <Folder Include="uSync\v9\Content\" />
      <Folder Include="wwwroot\Smidge\" />
    </ItemGroup>

    <!-- Set this to true if ModelsBuilder mode is not InMemoryAuto-->
    <PropertyGroup>
        <RazorCompileOnBuild>false</RazorCompileOnBuild>
        <RazorCompileOnPublish>false</RazorCompileOnPublish>
    </PropertyGroup>

</Project>
