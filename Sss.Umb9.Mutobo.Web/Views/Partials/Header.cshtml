@model Sss.Umb9.Mutobo.Interfaces.IHeaderConfiguration



<o-header sticky menu-icon="true" role="header" namespace="header-" class="show top">
    <style>

        :host {
           
        }

        :host([sticky].top), :host([sticky].top) > header {
            background-color: var(--header-background-color, black) !important;
        }

    </style>


    <div style="display:flex; flex-direction: row; align-items:center;">


        @if (!string.IsNullOrEmpty(Model.Logo?.DefaultSource?.Src) && !string.IsNullOrEmpty(Model.LogoUrl?.Url))
        {
            <a-logo namespace="logo-" src="@Model.Logo.DefaultSource.Src" href="@Model.LogoUrl.Url">
                <style>
                    :host {
                        --logo-height: 170px;
                    }
                </style>
            </a-logo>
        }



        <span style="font-size: min(1em, 5vw); font-weight: bold; margin: 0.5em 0 0.5em 0; color: #ffffff">...schau wies wächst!</span>
    </div>


    @if (Model.NavigationItems != null && Model.NavigationItems.Any())
    {



        <m-navigation hover="true" namespace="navigation-" hit-area="false">
            <style>
                :host {
                    
                    --navigation-a-link-color-no-scroll: #ffffff;
                    width: 50%;
                }
            </style>
            <ul>
                <li>
                    <a href="/">
                        Home
                    </a>
                </li>

                @foreach (var navItem in Model.NavigationItems)
                {
                    <li>
                        <a href="@navItem.Url" target="@(navItem.NewWindow ? "_blank" : string.Empty)">@navItem.Title</a>
                        @if (navItem.Children.Any())
                        {   
                            <ul>
                                @foreach (var childNavItem in navItem.Children)
                                {
                                    <li><a href="@childNavItem.Url" target="@(childNavItem.NewWindow ? "_blank" : string.Empty)">@childNavItem.Title</a></li>
                                }
                            </ul>
                        }
                    </li>
                }

            </ul>
        </m-navigation>


    }





</o-header>